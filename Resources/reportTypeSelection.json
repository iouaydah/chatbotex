    {
      "type": "TextBlock",
      "text": "Please Select Transaction Type"
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "Input.ChoiceSet",
          "id": "ReportTypeSelected",
          "placeholder": "Placeholder text",
