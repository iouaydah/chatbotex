{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.2",
  "type": "AdaptiveCard",
  "rtl": true,
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "تكلفة خدمة",
          "size": "Medium",
          "wrap": true,
          "weight": "Bolder",
          "horizontalAlignment": "Right"
        }
      ],
      "style": "good",
      "bleed": true
    },
    {
      "$data": "{Data}",
      "type": "Container",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "90px",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "تاريخ الاغلاق (dd/mm/yyyy):",
                  "wrap": true,
                  "horizontalAlignment": "Right"
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "{ClosingDate}",
                  "horizontalAlignment": "Right"
                }
              ]
            }
          ]
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "90px",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "عدد الاسهم",
                  "wrap": true,
                  "horizontalAlignment": "Right"
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "{qty}",
                  "horizontalAlignment": "Right"
                }
              ]
            }
          ]
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "90px",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "سعر الاغلاق - د.أ ",
                  "wrap": true,
                  "horizontalAlignment": "Right"
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "{ClosingPrice}",
                  "horizontalAlignment": "Right"
                }
              ]
            }
          ]
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "90px",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "تكلفة الخدمة - د.أ ",
                  "wrap": true,
                  "horizontalAlignment": "Right"
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "{Fees}",
                  "horizontalAlignment": "Right"
                }
              ]
            }
          ]
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "90px",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "ضريبة القيمة المضافة - د.أ",
                  "wrap": true,
                  "horizontalAlignment": "Right"
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "{VAT}",
                  "horizontalAlignment": "Right"
                }
              ]
            }
          ]
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "90px",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "المجموع - د.أ:",
                  "weight": "Bolder",
                  "wrap": true
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "{Total}",
                  "horizontalAlignment": "Right",
                  "color": "Dark"
                }
              ]
            }
          ]
        }
      ],
      "style": "good",
      "bleed": true
    }
  ]
}