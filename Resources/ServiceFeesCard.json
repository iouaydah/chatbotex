{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.2",
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "Service Fees for: ",
          "size": "Medium",
          "wrap": true,
          "weight": "Bolder"
        }
      ],
      "style": "good",
      "bleed": true
    },
    {
      "$data": "{Data}",
      "type": "Container",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "90px",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Closing Date: (dd/mm/yyyy)",
                  "wrap": true
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "{ClosingDate}",
                  "horizontalAlignment": "Right"
                }
              ]
            }
          ]
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "90px",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Shares quantity:",
                  "wrap": true
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "{qty}",
                  "horizontalAlignment": "Right"
                }
              ]
            }
          ]
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "90px",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Closing Price (AED):",
                  "wrap": true
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "{ClosingPrice}",
                  "horizontalAlignment": "Right"
                }
              ]
            }
          ]
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "90px",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Service Fees (AED):",
                  "wrap": true
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "{Fees}",
                  "horizontalAlignment": "Right"
                }
              ]
            }
          ]
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "90px",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "VAT (AED):"
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "{VAT}",
                  "horizontalAlignment": "Right"
                }
              ]
            }
          ]
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "90px",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Total (AED):",
                  "weight": "Bolder"
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "{Total}",
                  "horizontalAlignment": "Right",
                  "color": "Dark"
                }
              ]
            }
          ]
        }
      ],
      "style": "good",
      "bleed": true
    }
  ]
}