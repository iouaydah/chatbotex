{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.0",
    "body": [
      {
        "type": "TextBlock",
        "text": "الرجاء اختيار الشركة الوسيطة",
        "horizontalAlignment": "Right"
      },
      {
        "type": "Input.ChoiceSet",
        "id": "BrokerSelected",
        "placeholder": "الكل",
        "value": "1",
        "choices": [
          {
            "title": "الكل",
            "value": "All"
          },
          {
            "$data": "{Brokers}",
            "title": "{ValueArabic}",
            "value": "{Key}"
          }
        ]
      }
    ],
    "actions": [
        {
            "type": "Action.Submit",
            "title": "ارسال"
        }
    ]
}